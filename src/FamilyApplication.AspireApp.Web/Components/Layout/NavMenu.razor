<div class="navmenu">
    <input type="checkbox" title="Menu expand/collapse toggle" id="navmenu-toggle" class="navmenu-icon" />
    <label for="navmenu-toggle" class="navmenu-icon"><FluentIcon Value="@(new Icons.Regular.Size20.Navigation())" Color="Color.Fill" /></label>
    <nav class="sitenav" aria-labelledby="main-menu">
        <FluentNavMenu Id="main-menu" Collapsible="true" Width="250" Title="Navigation menu" @bind-Expanded="expanded" CustomToggle="true">
            <FluentNavLink Href="/home" Match="NavLinkMatch.All" Icon="@(new Icons.Regular.Size20.Home())" IconColor="Color.Accent">Startskjerm</FluentNavLink>
            <FluentNavLink Href="/myFamily" Match="NavLinkMatch.All" Icon="@(new Icons.Regular.Size20.People())" IconColor="Color.Accent">Min familie</FluentNavLink>
            <FluentNavLink Href="/blackboard" Match="NavLinkMatch.All" Icon="@(new Icons.Regular.Size20.ClipboardBulletList())" IconColor="Color.Accent">Tavle oppgaver</FluentNavLink>
            <FluentNavLink Href="/timeline" Match="NavLinkMatch.All" Icon="@(new Icons.Regular.Size20.Calendar())" IconColor="Color.Accent">Kalender</FluentNavLink>
            <FluentNavLink Href="/settings" Icon="@(new Icons.Regular.Size20.Settings())" IconColor="Color.Accent">Tema</FluentNavLink>
        </FluentNavMenu>
    </nav>
</div>

@code {
    private bool expanded = true;
}
